@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Profile</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        :root {
            --cobalt: #DC143C;
            --cobalt-dark: #b01030;
            --cobalt-light: #ffe6ea;
        }

        body {
            background-color: #f8f9fa;
            font-size: 0.95rem;
        }

        .profile-container {
            background: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            margin: 1rem auto;
        }

        .cobalt-text {
            color: var(--cobalt) !important;
        }

        .btn-cobalt {
            background-color: var(--cobalt);
            color: white;
            border: none;
        }

            .btn-cobalt:hover {
                background-color: var(--cobalt-dark);
                color: white;
            }

        .btn-outline-cobalt {
            border-color: var(--cobalt);
            color: var(--cobalt);
        }

            .btn-outline-cobalt:hover {
                background-color: var(--cobalt);
                color: white;
            }

        .profile-header {
            border-bottom: 2px solid var(--cobalt);
            padding-bottom: 1.25rem;
            margin-bottom: 1.5rem;
            position: relative;
        }

        .profile-icon {
            width: 80px;
            height: 80px;
            background-color: var(--cobalt-light);
            color: var(--cobalt);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin: 0 auto 1rem;
        }

        .profile-section {
            margin-bottom: 1.5rem;
        }

        .profile-section-title {
            color: var(--cobalt);
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .info-label {
            font-weight: bold;
            color: #495057;
        }

        .info-value {
            color: #212529;
            word-break: break-word;
        }

        .nav-tabs .nav-link.active {
            color: var(--cobalt);
            border-color: var(--cobalt);
            font-weight: bold;
        }

        .nav-tabs .nav-link {
            color: #495057;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

            .nav-tabs .nav-link:hover {
                color: var(--cobalt);
                border-color: transparent;
            }

        .activity-table th {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .activity-table td {
            font-size: 0.85rem;
            vertical-align: middle;
        }

        /* Editable field styles */
        .editable-field {
            cursor: pointer;
            position: relative;
            padding-right: 20px;
        }

            .editable-field:hover {
                background-color: var(--cobalt-light);
                border-radius: 4px;
            }

            .editable-field::after {
                content: "\f044";
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                position: absolute;
                right: 5px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 0.8em;
                color: var(--cobalt);
                opacity: 0;
                transition: opacity 0.2s;
            }

            .editable-field:hover::after {
                opacity: 1;
            }

        .edit-mode {
            background-color: #fff8e1;
            border: 1px solid #ffd54f;
            border-radius: 4px;
            padding: 0.25rem 0.5rem;
        }

        /* OTP Modal Styles */
        .otp-input {
            letter-spacing: 2rem;
            padding-left: 1rem;
            font-size: 1.5rem;
            text-align: center;
            width: 100%;
        }

        .otp-digit {
            display: inline-block;
            width: 2rem;
            text-align: center;
        }

        .otp-delivery-option {
            cursor: pointer;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            transition: all 0.2s;
        }

            .otp-delivery-option:hover {
                border-color: var(--cobalt);
                background-color: var(--cobalt-light);
            }

            .otp-delivery-option.selected {
                border-color: var(--cobalt);
                background-color: var(--cobalt-light);
            }

        @@media (max-width: 767.98px) {
            .profile-container {
                padding: 1rem;
            }

            .profile-icon {
                width: 60px;
                height: 60px;
                font-size: 2rem;
            }

            .info-label,
            .info-value {
                padding: 0.25rem 0;
            }

            .nav-tabs .nav-link {
                padding: 0.5rem;
                font-size: 0.8rem;
            }

            .btn {
                padding: 0.375rem 0.75rem;
                font-size: 0.85rem;
            }
        }

        @@media (max-width: 575.98px) {
            .profile-header h2 {
                font-size: 1.5rem;
            }

            .profile-section-title {
                font-size: 1rem;
            }

            .activity-table th,
            .activity-table td {
                font-size: 0.75rem;
                padding: 0.5rem;
            }

            .editable-field::after {
                opacity: 1;
                right: 0;
            }
        }
    </style>
</head>

