                    <p id="successMessage">Your profile information has been updated.</p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-cobalt" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Bootstrap tabs
            var tabElms = document.querySelectorAll('button[data-bs-toggle="tab"]');
            tabElms.forEach(function (tabEl) {
                tabEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    var tab = new bootstrap.Tab(tabEl);
                    tab.show();
                });
            });

            // Initialize modals
            const otpDeliveryModal = new bootstrap.Modal(document.getElementById('otpDeliveryModal'));
            const otpVerificationModal = new bootstrap.Modal(document.getElementById('otpVerificationModal'));
            const changePasswordModal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));

            // Store original values for comparison
            const originalValues = {};
            document.querySelectorAll('.editable-field').forEach(field => {
                originalValues[field.id] = field.textContent;
            });

            // Edit mode toggle
            const toggleEditMode = document.getElementById('toggleEditMode');
            let editMode = false;
            let changesMade = false;

            toggleEditMode.addEventListener('click', function() {
                if (!editMode) {
                    // Entering edit mode
                    editMode = true;
                    this.innerHTML = '<i class="fas fa-save me-1"></i>Save';

                    document.querySelectorAll('.editable-field').forEach(field => {
                        field.classList.add('edit-mode');
                        field.setAttribute('contenteditable', 'true');
                    });
                } else {
                    // Check if any changes were made
                    changesMade = false;
                    document.querySelectorAll('.editable-field').forEach(field => {
                        if (field.textContent !== originalValues[field.id]) {
                            changesMade = true;
                        }
                    });

                    if (changesMade) {
                        // Show OTP delivery options before saving
                        otpDeliveryModal.show();
                    } else {
                        // No changes, just exit edit mode
                        exitEditMode();
                    }
                }
            });

            function exitEditMode() {
                editMode = false;
                toggleEditMode.innerHTML = '<i class="fas fa-edit me-1"></i>Edit';

                document.querySelectorAll('.editable-field').forEach(field => {
                    field.classList.remove('edit-mode');
                    field.removeAttribute('contenteditable');
                });
            }

            // OTP delivery method selection
            document.querySelectorAll('.otp-delivery-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.otp-delivery-option').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    this.classList.add('selected');
                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;
                });
            });

            // Send OTP button
            document.getElementById('sendOtpBtn').addEventListener('click', function() {
                const selectedMethod = document.querySelector('input[name="otpDelivery"]:checked').parentElement
                    .parentElement.getAttribute('data-method');

                // Update the verification modal with the selected method
                const methodText = selectedMethod === 'sms'
                    ? 'mobile number ending with 7890'
                    : 'email address johndoe@example.com';
                document.getElementById('otpDeliveryMethod').textContent = methodText;

                otpDeliveryModal.hide();
                otpVerificationModal.show();

                // Start OTP timer (2 minutes)
                startOtpTimer();
            });

            // Resend OTP button
            document.getElementById('resendOtp').addEventListener('click', function() {
                alert('A new verification code has been sent.');
                startOtpTimer();
            });

            // Verify OTP button
            document.getElementById('verifyOtpBtn').addEventListener('click', function() {
                const otpInput = document.getElementById('otpInput').value;

                if (otpInput.length === 6) {
                    otpVerificationModal.hide();

                    if (changesMade) {
                        // Save profile changes
                        document.querySelectorAll('.editable-field').forEach(field => {
                            originalValues[field.id] = field.textContent;
                        });

                        // Show success message
                        document.getElementById('successMessage').textContent =
                            'Your profile information has been updated successfully.';
                        successModal.show();

                        exitEditMode();
                    } else {
                        // For password change
                        changePasswordModal.show();
                    }
                } else {
                    alert('Please enter a valid 6-digit verification code');
                }
            });

            // Change Password button
            document.getElementById('changePasswordBtn').addEventListener('click', function() {
                otpDeliveryModal.show();
            });

            // Update Security button
            document.getElementById('updateSecurityBtn').addEventListener('click', function() {
                otpDeliveryModal.show();
            });

            // Save Password button
            document.getElementById('savePasswordBtn').addEventListener('click', function() {
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                if (newPassword !== confirmPassword) {
                    alert('Passwords do not match!');
                    return;
                }

                if (newPassword.length < 8) {
                    alert('Password must be at least 8 characters long');
                    return;
                }

                changePasswordModal.hide();

                // Show success message
                document.getElementById('successMessage').textContent =
                    'Your password has been changed successfully.';
                successModal.show();
            });

            // Profile icon edit
            document.getElementById('profileIconEdit').addEventListener('click', function() {
                if (editMode) {
                    alert('In a real app, this would open a file picker to upload a new profile image');
                }
            });

            // OTP timer function
            function startOtpTimer() {
                let timeLeft = 120;
                const otpTimer = document.getElementById('otpTimer');
                const otpInterval = setInterval(() => {
                    timeLeft--;
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    otpTimer.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

                    if (timeLeft <= 0) {
                        clearInterval(otpInterval);
                        otpTimer.textContent = "Expired";
                    }
                }, 1000);
            }
        });
    </script>
